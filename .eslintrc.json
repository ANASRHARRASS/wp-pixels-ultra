{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "no-console": "warn",
    "prefer-const": "warn",
    "eqeqeq": [
      "error",
      "always"
    ],
    "no-var": "warn",
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true
      }
    ]
  },
  "globals": {
    "UP_CONFIG": "readonly",
    "UPAdmin": "readonly",
    "wp": "readonly",
    "jQuery": "readonly",
    "_": "readonly",
    "dataLayer": "writable"
  }
}
